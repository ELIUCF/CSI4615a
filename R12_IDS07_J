// R12_IDS07_J.java (non-compliant)
// Opens arbitrary file based on unvalidated user input.
import java.io.*;
public class R12_IDS07_J {
    public static void main(String[] args) throws IOException {
        if (args.length == 0) {
            System.out.println("Usage: java R12_IDS07_J <filename>");
            return;
        }
        File file = new File(args[0]); // Vulnerable to path traversal (e.g., ../../etc/passwd)
        try (BufferedReader br = new BufferedReader(new FileReader(file))) {
            System.out.println("Reading first line: " + br.readLine());
        }
    }
}
